<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewProfile">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="325dp"
        android:layout_height="226dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="481dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_icon9" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="429dp"
        android:fontFamily="cursive"
        android:text="Abcd"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#E91E63"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_cardView"
        android:layout_width="375dp"
        android:layout_height="400dp"
        android:layout_marginTop="300dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/Cyan_200"

        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:gravity="start"
                android:text="UserName"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/Branch"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="start"
                android:layout_below="@id/Username"
                android:text="Integrated MTech Software Engineering"
                android:textSize="24sp"
                android:textStyle="bold"
                 />


            <TextView
                android:id="@+id/YearOfStudy"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_below="@id/Branch"
                android:layout_height="50dp"
                android:text="3rd Year"
                android:textSize="24sp"
                android:textStyle="bold"
                 />

            <TextView
                android:id="@+id/MobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/YearOfStudy"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="Mobile Number"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prof_Dob"
                android:layout_margin="15dp"
                android:layout_below="@id/MobileNo"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Date Of Birth"
                android:textSize="24sp"
                android:textStyle="bold"
                 />

            <TextView
                android:id="@+id/prof_hostel"
                android:layout_below="@id/prof_Dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="Hostel"
                android:textSize="24sp"
                android:textStyle="bold"
                 />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>